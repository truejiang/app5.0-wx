/* template/search-bar/search-bar.wxss */
.search-box {
  position: relative;
  padding: 16rpx 0;
  background-color: #FFF;
}
.search-box .search-icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  left: 60rpx;
  z-index: 999;
  top: 32rpx;
}
.search-box .search-cancel-icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 60rpx;
  z-index: 999;
  top: 32rpx;
}
.search-box .search-input {
  background-color: #F5F6FB;
  margin: 0 30rpx;
  height: 28rpx;
  padding: 6rpx 0;
  padding-left: 74rpx;
  font-size: 28rpx;
  color: #888;
  line-height: 28rpx;
  border-radius: 10rpx;
}