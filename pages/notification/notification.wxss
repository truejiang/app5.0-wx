/* 消息列表 */
.notification-list {
  border-top: 2rpx solid #EDEDED;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}
.notification-list:last-child {
  border-bottom: 2rpx solid #EDEDED;
}
.notification-list .header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.notification-list .header .title {
  font-size: 32rpx;
  color: #484848;
  line-height: 32rpx;
}
.notification-list .header .title.unread::after {
  content: "";
  display: inline-block;
  margin-left: 14rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #FEBE10;
  border-radius: 50%;
}
.notification-list .header .time {
  font-size: 28rpx;
  color: #888888;
  line-height: 28rpx;
}
.notification-list .content {
  font-size: 28rpx;
  color: #888888;
  line-height: 40rpx;
}
/* 空白消息 */
.nullmsg {
  text-align: center;
}
.nullmsg image {
  width: 280rpx;
  height: 356rpx;
  margin-top: 220rpx;
}
.nullmsg .words {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #888;
  line-height: 28rpx;
}