/* pages/index/index.wxss */
/* top 搜索栏*/
.searchbar {
  display: flex;
  padding: 16rpx 0; 
}
.searchbar .searchbox {
  width: calc(100% - 30rpx);
  background-color: #F5F6FB;
  border-radius: 10rpx;
  margin-left: 30rpx;
  line-height: 64rpx;
  height: 64rpx;
  font-size: 28rpx;
  color: #888888;
  text-align: center;
}
.searchbar .mes {
  flex: 0 0 94rpx;
  width: 94rpx;
  text-align: center;
  font-size: 22rpx;
  color: #555;
}
.searchbar .mes .icon {
  width: 36rpx;
  height: 30rpx;
}
/* 头部banner */
.header-banner {
  width: 100%;
  height: 288rpx;
}
.header-banner > image {
  width: 100%;
  height: 100%;
}
/* 头部nav */
.header-nav {
  display: flex;
  width: 100%;
  padding: 40rpx 0;
  justify-content: space-around;
}
.header-nav .items .icon-bar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  text-align: center;
}
.header-nav .items .icon-bar image {
  width: 66rpx;
  height: 66rpx;
  margin-top: 11rpx;
}
.header-nav .items .icon-bar.tea-time {
  background-color: #F46F3D;
}
.header-nav .items .icon-bar.tea-shoppingbar {
  background-color: #FBAF2B;
}
.header-nav .items .icon-bar.tea-bind {
  background-color: #D16D37;
}
.header-nav .items .title {
  display: inline-block;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #484848;
  line-height: 26rpx;
}
/* 首页推荐banner */
.index-recommend-banner {
  border: 2rpx solid #f5f5f5;
  border-left: none;
  border-right: none;
  padding: 40rpx 30rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}
.index-recommend-banner .banner-header {
  padding-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}
.index-recommend-banner .banner-header .title{
  font-size: 40rpx;
  color: #484848;
  line-height: 40rpx;
  font-weight: 500;
}
.index-recommend-banner .banner-header .index-page .current-page {
  color: #484848;
  font-size: 32rpx;
  line-height: 24rpx;
  font-weight: 500; 
}
.index-recommend-banner .banner-header .index-page .total-page {
  color: #3A3A3A;
  line-height: 24rpx;
  font-size: 24rpx;
}
.index-recommend-banner .swiper-wrapper {
  width: 100%;
  height: 370rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.index-recommend-banner .swiper-wrapper .item {
  width: 100%;
  height: 300rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.index-recommend-banner .swiper-wrapper .des {
  display: flex;
  padding: 30rpx 0;
  justify-content: space-between;
}
.index-recommend-banner .swiper-wrapper .des .left .name {
  font-size: 32rpx;
  color: #484848;
  line-height: 32rpx;
}
.index-recommend-banner .swiper-wrapper .des .left .status {
  margin-left: 20rpx;
  background-color: #FC6345;
  border-radius: 10rpx;
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  color: #ffffff;
  line-height: 20rpx;
  position: relative;
  top: -2rpx;
}
.index-recommend-banner .swiper-wrapper .des .right {
  color: #FC6345;
  font-size: 28rpx;
  line-height: 28rpx;
  position: relative;
  top: -24rpx;
}
/* 热搜榜单 */
.top-search {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.top-search .title {
  font-size: 40rpx;
  color: #484848;
  line-height: 40rpx;
}
.top-search .content {
  display: flex;
  flex-wrap: wrap;
}
.top-search .content .item {
  width: 33.3333%;
  text-align: center;
  margin-top: 40rpx;
}
.top-search .content .item image {
  width: 200rpx;
  height: 200rpx;
}
.top-search .content .item .name {
  font-size: 28rpx;
  color: #484848;
  line-height: 28rpx;
  display: block;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}
.top-search .content .item .price {
  color: #FC6345;
  font-size: 24rpx;
}
.block {
  width: 100%;
  height: 20rpx;
  background-color: #F5F6FB;
}
/* 首页底部banner */
.foot-banner {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.foot-banner image {
  width: 100%;
  height: 308rpx;
  margin-bottom: 40rpx;
}
/* 弹窗口 */
.storage-charge-modal {
  text-align: left;
  color: #484848;
  font-size: 28rpx;
  line-height: 28rpx;
}
