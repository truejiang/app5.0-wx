/* 顶部nav */
.nav-bar {
  display: flex;
  justify-content: center;
}
.nav-bar .items {
  font-size: 28rpx;
  line-height: 28rpx;
  letter-spacing: -0.68rpx;
  padding: 12rpx 26rpx;
  color: #484848;
  box-sizing: border-box;
  border: 2rpx solid #484848;
}
.nav-bar .items:first-child {
  border-bottom-left-radius: 10rpx;
  border-top-left-radius: 10rpx;
  border-right: 0;
}
.nav-bar .items:nth-child(2) {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.nav-bar .items.selected {
  background-color: #484848;
  color: #FFF;
}
.nav-bar image {
  width: 32rpx;
  height: 32rpx;
  position: fixed;
  right: 30rpx;
  top: 10rpx;
}

/* 头部banner */
.swiper-wrapper {
  width: 100%;
  height: 816rpx;
}

.swiper-wrapper .item {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center center;
}

/* 商品信息栏 */
.goods-info {
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  border-bottom: 2rpx solid #F5F5F5;  
}
.goods-info .header {
  display: flex;
  justify-content: space-between;
}
.goods-info .header .name {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #484848;
}
.goods-info .header .inventory {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #484848;
}
.goods-info .price {
  font-size: 40rpx;
  line-height: 40rpx;
  color: #FC6345;
  margin: 30rpx 0 40rpx 0;
}
.goods-info .prompt {
  padding: 14rpx 20rpx;
  background-color: #F5F6FB;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #333;
}
.goods-info .prompt .label {
  background-color: #2E2E2E;
  border-radius: 10rpx;
  color: #FEBE10;
  font-size: 20rpx;
  padding: 6rpx 14px;
  margin-right: 10rpx;
}
.tips {
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #484848;
  padding-bottom: 130rpx;
}
.tips image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.tips .des {
  margin-top:18rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #888;
  letter-spacing: -0.68rpx;
}
.options {
  border-top: 20rpx solid #F5F6FB;
  box-sizing: border-box;
  padding: 30rpx 0;
}
.options .title {
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #484848;
  margin-bottom: 40rpx;
}
.options .title::before {
  content: "";
  display: inline-block;
  background-color: #FEBB10;
  width: 6rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.options .table-itme {
  padding-right: 30rpx;
  border-top: 2rpx solid #F5F6FB;
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
}
.options .table-itme:last-child {
  border-bottom: 2rpx solid #F5F6FB;
}
.options .table-itme .name{
  width: 220rpx;
  flex: 0 0 220rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #F5F6FB;
}
.options .table-itme .value {
  padding-left: 60rpx;
}
.options .banner {
  width: 100%;
  border-top: 20rpx solid #F5F6FB;
}
.options .banner image {
  width: 100%;
  height: 764rpx;
}
/* 开售提醒页 */
.sale-to-remind {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 999;
  padding: 32rpx;
  box-sizing: border-box;
}
.sale-to-remind .cancel {
  margin-bottom: 80rpx;
}
.sale-to-remind .cancel image {
  width: 28.6rpx;
  height: 28.6rpx;
}
.sale-to-remind .remind-time-list {
  padding: 50rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #484848;
  border-top: 2rpx solid #f5f5f5;    
}
.sale-to-remind .remind-time-list:last-child {
  border-bottom: 2rpx solid #f5f5f5;
}
.sale-to-remind .remind-time-list image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}